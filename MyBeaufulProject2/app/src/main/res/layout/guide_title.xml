<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ee3d43">
    <ImageView
        android:layout_marginLeft="8dp"
        android:id="@+id/guide_title_one"
        android:background="@mipmap/btn_signin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/guide_title_two"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp" />
    <ImageView
        android:id="@+id/guide_title_two"
        android:background="@mipmap/logo_title"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="110dp"
        android:background="@mipmap/fdj"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>